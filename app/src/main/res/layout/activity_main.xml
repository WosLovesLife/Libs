<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/id_btn_loop_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LoopView样例"/>

    <Button
        android:id="@+id/id_btn_header_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BaseRecyclerView样例"/>

    <Button
        android:id="@+id/id_btn_clip_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GetAndClipPhoto样例"/>
</LinearLayout>