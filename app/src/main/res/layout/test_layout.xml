<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_backgound"
              android:layout_width="310dp"
              android:layout_height="510dp"
              android:background="#00000000"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="440dp"
        android:layout_gravity="center"
        android:background="@drawable/image7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/backgound_word"
                android:layout_width="300dp"
                android:layout_height="154dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/image6"/>

            <ImageView
                android:id="@+id/study_click"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="105dp"
                android:background="@drawable/image5"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/course_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:clickable="false"
            android:text="第一课"
            android:textColor="@android:color/white"
            android:textSize="19sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/word_comment_icon"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/image1"/>

            <TextView
                android:id="@+id/word_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="166"
                android:textColor="#FFF"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/word_pager_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:text="1/10"
        android:textColor="#666666"
        android:textSize="18sp"/>

</LinearLayout>