<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开/收起"/>

        <CheckBox
            android:id="@+id/id_cb_edge_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="边缘可触摸"/>

        <CheckBox
            android:id="@+id/id_cb_auto_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动消失"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/id_btn_test_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试触摸遮挡"/>
        </FrameLayout>

        <com.wosloveslife.drag2doubleunfold.Drag2DoubleUnfoldLayout
            android:id="@+id/id_sdl_spread"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f41886"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/alert_dark_frame"/>

                <Button
                    android:id="@+id/id_btn_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.wosloveslife.drag2doubleunfold.Drag2DoubleUnfoldLayout>
    </FrameLayout>
</LinearLayout>