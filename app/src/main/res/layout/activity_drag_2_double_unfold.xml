<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_change"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开/收起"/>

        <CheckBox
            android:id="@+id/id_cb_edge_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="边缘可触摸"/>

        <CheckBox
            android:id="@+id/id_cb_auto_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动消失"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/id_btn_test_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试触摸遮挡"/>
    </FrameLayout>

    <com.wosloveslife.drag2doubleunfold.Drag2DoubleUnfoldLayout
        android:id="@+id/id_sdl_spread"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_share_board"/>
        </android.support.v7.widget.CardView>
    </com.wosloveslife.drag2doubleunfold.Drag2DoubleUnfoldLayout>
</FrameLayout>